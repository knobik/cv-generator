{
  "name": "cv-generator",
  "version": "0.1.0",
  "description": "A CV/Resume generator built with Next.js, React, TypeScript, and Tailwind CSS",
  "author": "knobik",
  "license": "MIT",
  "homepage": "https://knobik.github.io/cv-generator/",
  "repository": {
    "type": "git",
    "url": "https://github.com/knobik/cv-generator.git"
  },
  "bugs": {
    "url": "https://github.com/knobik/cv-generator/issues"
  },
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:staged": "lint-staged",
    "format:changed": "prettier --write $(git diff --name-only --diff-filter=ACMR HEAD | grep -E '\\.(js|jsx|ts|tsx|json|css)$' | xargs)",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "export": "next build"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css}": "prettier --write"
  },
  "dependencies": {
    "@mdxeditor/editor": "^3.52.3",
    "clsx": "^2.1.1",
    "next": "^15.1.4",
    "next-intl": "^4.7.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-easy-crop": "^5.5.6",
    "react-markdown": "^10.1.0",
    "tailwind-merge": "^2.6.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.5",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.17.0",
    "eslint-config-next": "^15.1.4",
    "happy-dom": "^20.1.0",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.4.49",
    "prettier": "^3.8.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "vitest": "^4.0.16"
  }
}
